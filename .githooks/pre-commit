#!/bin/bash
# Pre-commit hook to prevent accidental deletion of critical files

critical_files=("vercel.json" "package.json" "index.js")

for file in "${critical_files[@]}"; do
    if [ ! -f "$file" ]; then
        echo "❌ ERROR: Critical file '$file' is missing!"
        echo "This file is required for deployment. Please restore it before committing."
        exit 1
    fi
done

echo "✅ All critical files present"
exit 0